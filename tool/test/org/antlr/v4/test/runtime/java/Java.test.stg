package org.antlr4.runtime.test;

import org.antlr.v4.test.rt.java.BaseTest;
import org.junit.Test;

import static org.junit.Assert.*;

<if(file.importErrorQueue)>
import org.antlr.v4.test.tool.ErrorQueue;
<endif>
